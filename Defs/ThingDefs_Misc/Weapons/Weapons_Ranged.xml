<?xml version="1.0" encoding="utf-8" ?>

<Defs>

  <!-- Lebel 1886 -->
  <ThingDef ParentName="BaseBullet">
    <defName>HRK_Bullet_1886LebelSniper</defName>
    <label>Lebel 1886 sniper bullet</label>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>15</damageAmountBase>
      <speed>75</speed>
      <stoppingPower>0.1</stoppingPower>
      <armorPenetrationBase>0.1</armorPenetrationBase>
    </projectile>
    <graphicData>
      <texPath>Things/Projectile/Bullet_big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>HRK_1886LebelSniper</defName>
    <label>Lebel 1886 sniper</label>
    <description>The Lebel Model 1886 rifle is an 8 mm bolt-action infantry rifle.The Lebel rifle has the distinction of being the first military firearm to use smokeless powder ammunition.</description>
    <graphicData>
      <texPath>Things/Weapons/HRK_1886LebelSniper</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <equippedAngleOffset>45</equippedAngleOffset>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>12800</WorkToMake>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.74</AccuracyShort>
      <AccuracyMedium>0.92</AccuracyMedium>
      <AccuracyLong>0.84</AccuracyLong>
      <RangedWeapon_Cooldown>1.75</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <WoodLog>20</WoodLog>
      <Steel>60</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
      <researchPrerequisite>Gunsmithing</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>HRK_Bullet_1886LebelSniper</defaultProjectile>
        <warmupTime>1.9</warmupTime>
        <range>40</range>
        <soundCast>Shot_BoltActionRifle</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <weaponTags>
      <li>SimpleGun</li>
    </weaponTags>
  </ThingDef>

